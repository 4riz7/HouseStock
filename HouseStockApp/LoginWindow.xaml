<Window x:Class="HouseStockApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid>
        <Border CornerRadius="20" Background="White" Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3" Color="Black"/>
            </Border.Effect>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side: Image/Branding -->
                <Border Grid.Column="0" CornerRadius="20,0,0,20">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#67BA80" Offset="0"/>
                            <GradientStop Color="#4D9966" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ЖилФонд" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Система управления заявками" FontSize="16" Foreground="#E0E0E0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Right Side: Login Form -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="40">
                    <TextBlock Text="Авторизация" FontSize="26" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                    <TextBlock Text="Сотрудник" Foreground="Gray" Margin="0,0,0,5"/>
                    <ComboBox x:Name="EmployeeComboBox" DisplayMemberPath="FullName" Height="40" Margin="0,0,0,20" Padding="10" 
                              Background="#F5F5F5" BorderBrush="Transparent" BorderThickness="0"
                              VerticalContentAlignment="Center"/>

                    <TextBlock Text="Пароль" Foreground="Gray" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordField" Height="40" Margin="0,0,0,30" Padding="10,0"
                                 Background="#F5F5F5" BorderBrush="Transparent" BorderThickness="0"
                                 VerticalContentAlignment="Center"/>

                    <Button Content="Войти" Height="45" Click="LoginButton_Click" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#67BA80"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#5AA972"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="Выход" Margin="0,15,0,0" Click="ExitButton_Click" Background="Transparent" BorderThickness="0" Foreground="Gray" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

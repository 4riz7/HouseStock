<!-- Pages/AddressesPage.xaml -->
<Window x:Class="HouseStockApp.Pages.AddressesPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список адресов" Height="600" Width="900"
        Style="{StaticResource BaseWindowStyle}"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Список адресов жилого фонда" Style="{StaticResource WindowTitleStyle}" Grid.Row="0"/>

        <ListView x:Name="AddressesListView"
                  Grid.Row="1"
                  FontFamily="Segoe UI"
                  Background="Transparent"
                  BorderBrush="LightGray"
                  BorderThickness="1">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,0,0,8"/>
                    <Setter Property="Padding" Value="12"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="#DDDDDD"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Address}"/>
                        <TextBlock><Run Text="Начало управления:" FontWeight="Bold"/> <Run Text="{Binding ManagementStartDate, StringFormat='dd.MM.yyyy'}"/></TextBlock>
                        <TextBlock><Run Text="Этажность:" FontWeight="Bold"/> <Run Text="{Binding Floors}"/></TextBlock>
                        <TextBlock><Run Text="Квартир:" FontWeight="Bold"/> <Run Text="{Binding TotalApartments}"/></TextBlock>
                        <TextBlock><Run Text="Год постройки:" FontWeight="Bold"/> <Run Text="{Binding BuildYear}"/></TextBlock>
                        <TextBlock><Run Text="Площадь (м²):" FontWeight="Bold"/> <Run Text="{Binding TotalArea}"/></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Content="Назад" 
                Style="{StaticResource SecondaryButtonStyle}" 
                Grid.Row="2" 
                HorizontalAlignment="Left"
                Click="OnBackClick"/>
    </Grid>
</Window>
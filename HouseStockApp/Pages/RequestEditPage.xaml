<!-- Pages/RequestEditPage.xaml -->
<Window x:Class="HouseStockApp.Pages.RequestEditPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить заявку" Height="650" Width="700"
        Style="{StaticResource BaseWindowStyle}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Форма заявки" Style="{StaticResource WindowTitleStyle}" Grid.Row="0"/>

            <!-- Дом -->
            <TextBlock Text="Дом:" Grid.Row="1" Margin="0,10,0,5"/>
            <ComboBox x:Name="HouseComboBox" Grid.Row="2" Height="30" SelectionChanged="HouseComboBox_SelectionChanged"/>

            <!-- Квартира -->
            <TextBlock Text="Квартира:" Grid.Row="3" Margin="0,10,0,5"/>
            <ComboBox x:Name="ApartmentComboBox" Grid.Row="4" Height="30"/>

            <!-- Заявитель -->
            <TextBlock Text="ФИО заявителя:" Grid.Row="5" Margin="0,10,0,5"/>
            <TextBox x:Name="ApplicantNameBox" Grid.Row="6" Height="30"/>

            <!-- Телефон -->
            <TextBlock Text="Контактный телефон:" Grid.Row="7" Margin="0,10,0,5"/>
            <TextBox x:Name="PhoneBox" Grid.Row="8" Height="30"/>

            <!-- Проблема -->
            <TextBlock Text="Описание проблемы:" Grid.Row="9" Margin="0,10,0,5"/>
            <TextBox x:Name="ProblemBox" Grid.Row="10" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>

            <!-- Исполнитель -->
            <TextBlock Text="Ответственный исполнитель:" Grid.Row="11" Margin="0,10,0,5"/>
            <ComboBox x:Name="EmployeeComboBox" Grid.Row="12" Height="30"/>

            <!-- Статус -->
            <TextBlock Text="Статус заявки:" Grid.Row="13" Margin="0,10,0,5"/>
            <ComboBox x:Name="StatusComboBox" Grid.Row="14" Height="30"/>

            <!-- Кнопки (гарантированно одинаковые) -->
            <StackPanel Grid.Row="15" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" 
            Style="{StaticResource AccentButtonStyle}" 
            Click="OnSaveClick" 
            Width="120" Height="36"/>
                <Button Content="Отмена" 
            Style="{StaticResource SecondaryButtonStyle}" 
            Click="OnCancelClick" 
            Width="120" Height="36"
            Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
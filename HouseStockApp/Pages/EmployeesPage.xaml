<!-- Pages/EmployeesPage.xaml -->
<Window x:Class="HouseStockApp.Pages.EmployeesPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список сотрудников" Height="500" Width="600"
        Style="{StaticResource BaseWindowStyle}"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Список сотрудников" Style="{StaticResource WindowTitleStyle}" Grid.Row="0"/>

        <ListView x:Name="EmployeesListView"
                  Grid.Row="1"
                  FontFamily="Segoe UI"
                  Background="Transparent"
                  BorderBrush="LightGray"
                  BorderThickness="1">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,0,0,8"/>
                    <Setter Property="Padding" Value="12"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="#DDDDDD"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding FullName}"/>
                        <TextBlock><Run Text="Должность:" FontWeight="Bold"/> <Run Text="{Binding Position}"/></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Content="Назад" 
                Style="{StaticResource SecondaryButtonStyle}" 
                Grid.Row="2" 
                HorizontalAlignment="Left"
                Click="OnBackClick"/>
    </Grid>
</Window>
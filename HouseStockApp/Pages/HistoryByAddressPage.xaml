<!-- Pages/HistoryByAddressPage.xaml -->
<Window x:Class="HouseStockApp.Pages.HistoryByAddressPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История заявок по адресу" Height="600" Width="800"
        Style="{StaticResource BaseWindowStyle}"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="AddressTitleBlock" 
                   Style="{StaticResource WindowTitleStyle}" 
                   Grid.Row="0"/>

        <!-- ListView с карточками -->
        <ListView x:Name="HistoryListView"
                  Grid.Row="1"
                  FontFamily="Segoe UI"
                  Background="Transparent"
                  BorderBrush="LightGray"
                  BorderThickness="1">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,0,0,8"/>
                    <Setter Property="Padding" Value="12"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="#DDDDDD"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock>
                            <Run Text="Кв." FontWeight="Bold"/>
                            <Run Text="{Binding Apartment.ApartmentNumber, FallbackValue='—'}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Заявитель:" FontWeight="Bold"/>
                            <Run Text="{Binding ApplicantName, FallbackValue='—'}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Телефон:" FontWeight="Bold"/>
                            <Run Text="{Binding ContactPhone, FallbackValue='—'}"/>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,4,0,0">
                            <Run Text="Проблема:" FontWeight="Bold"/>
                            <Run Text="{Binding ProblemDescription, FallbackValue='—'}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Исполнитель:" FontWeight="Bold"/>
                            <Run Text="{Binding Employee.FullName, FallbackValue='—', TargetNullValue='—'}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Статус:" FontWeight="Bold"/>
                            <Run Text="{Binding Status, FallbackValue='—'}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Создана:" FontWeight="Bold"/>
                            <Run Text="{Binding CreatedAt, StringFormat='dd.MM.yyyy HH:mm', FallbackValue='—'}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Обновлена:" FontWeight="Bold"/>
                            <Run Text="{Binding UpdatedAt, StringFormat='dd.MM.yyyy HH:mm', FallbackValue='—'}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Кнопка "Назад" -->
        <Button Content="Назад" 
                Style="{StaticResource SecondaryButtonStyle}" 
                Grid.Row="2" 
                HorizontalAlignment="Left"
                Click="OnBackClick"/>
    </Grid>
</Window>